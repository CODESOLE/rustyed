{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch with args: Cargo.toml",
            "type": "codelldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "args": ["Cargo.toml"],
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "stopAtEntry": true
        },
        {
            "name": "Launch with args: Cargo.lock",
            "type": "codelldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "args": ["Cargo.lock"],
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "stopAtEntry": true
        },
        {
            "name": "Launch without args",
            "type": "codelldb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/target/debug/${workspaceFolderBasename}",
            "stopAtEntry": true
        }
    ]
}
