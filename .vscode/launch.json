{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/rustyed.exe",
            "args": ["Cargo.lock"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        },
        {
            "name": "(Linux) Launch",
            "type": "lldb",
            "request": "launch",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rustyed",
                    "--package=rustyed"
                ],
                "filter": {
                    "name": "rustyed",
                    "kind": "bin"
                }
            },
            "args": [
                "Cargo.lock"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}